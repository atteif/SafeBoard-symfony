{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lostandfound</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lostAndFound.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ lostAndFound.label }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if lostAndFound.date %}{{ lostAndFound.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ lostAndFound.image }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('lostandfound_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('lostandfound_edit', { 'id': lostAndFound.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
